{
  "manifest_version": 3,
  "name": "Temporary Chat Helper",
  "version": "1.0",
  "description": "Highlight text, press Alt, and open a temporary ChatGPT popup.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab"]
}
